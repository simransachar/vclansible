body {
  margin : 50px 0px; 
  padding : 0;
  border-color : #cc0000;
  background-color : #ffffff;
  color : #000000;
  text-align:left;
}
a, p, ul, ol, li dl, dd, dt{
  font : 10pt Arial,geneva,helvetica;
  text-justify: inter-word;
  text-decoration: none;
  list-style-type: none;
  }
h1 {
  font : bold 14pt Arial, Helvetica, geneva;
}
h2 {
  font : bold 12pt Arial, Helvetica, geneva;
}
#header {
	#position: absolute;
	#left: 0px;
	#height: 65px;
	width: 600px;
	margin: 0px auto;
	text-align: left;
	padding:15px;
	#border:1px dashed #333;
	background-color:#b0c4de;
	#width: 100%;
	#color:#000;
	opacity: .5;
	#text-align: center;
	}

#bot {
	float: right;
	right: 0;
	height: 100px;
	z-index: 0;
	}
#header h1 a { font-size: 35px;
	vertical-align:middle;
	text-decoration:none;
	color:#000;
	
	}
.button {
	#position:absolute;
	#top: 10px;
	#right: 100px;	
	background-color:#FF6;
	padding: 5px 20px 5px 20px;
	color:#000;
	text-decoration:none;
	margin:20px 20px 20px 20px;
	border-color:#000;
	text-align:center;
	z-index:5;	
}
.highlight {
	padding: 5px 5px 5px 5px;
	background-color:#FF6347;
	opacity: .5;
}
#sidebar {
  display:none;
  position : absolute;
  left : 0;
  width : 250px;
  margin-left : 0px;
  margin-top : 65px;
  #background-color : #b0c4de;
  padding : 3px;
}
dt { font-weight: bold; }
#rightnavigation {
  position : absolute;
  left : 80%;
  top : 20px;
  width : 240px;
  padding-left : 10px;
  z-index : 3;
  color : #000000;
  padding : 3px;
}
#Fixed content
#content {
  width: 600px;
  margin: 0px auto;
  text-align: left;
  padding: 15px;
  #border: 1px dashed #333;
  background-color:#eee;
  #top : 100px;
  #margin : 0px 25% 0 256px;
  #padding : 75px;
  #color : #000000;
}
#content h1, #content h2 {
  color : #000;
}
#content h1 {
  background-color:#FF0;
  padding: 5px 5px 5px 5px;
  opacity: .5
}
